                <posy>360</posy>
                <width>700</width>
                <height>56</height>

                <texturebg>barra_bg.png</texturebg>
                <lefttexture>barra_fill_left.png</lefttexture>
                <midtexture>barra_fill_mid.png</midtexture>
                <righttexture>barra_fill_right.png</righttexture>

                <visible>true</visible>
            </control>

            <control type="label">
                <posx>0</posx>
                <posy>436</posy>
                <width>700</width>
                <height>30</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>font15</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>FF000000</shadowcolor>
                <label>$ADDON[plugin.video.kingiptv 32030]</label>
                <visible>String.IsEmpty(Window(Home).Property(loading.phase2))</visible>
            </control>

            <control type="label">
                <posx>0</posx>
                <posy>436</posy>
                <width>700</width>
                <height>30</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>font15</font>
                <textcolor>FFFFFFFF</textcolor>
                <shadowcolor>FF000000</shadowcolor>
                <label>$ADDON[plugin.video.kingiptv 32031]</label>
                <visible>!String.IsEmpty(Window(Home).Property(loading.phase2))</visible>
            </control>

        </control>

    </controls>
