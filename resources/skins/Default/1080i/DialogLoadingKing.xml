    <allowoverlay>no</allowoverlay>

    <controls>

        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
            <texture>$INFO[Window(Home).Property(loading.fanart)]</texture>
            <aspectratio>scale</aspectratio>
            <fadetime>300</fadetime>
        </control>

        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1920</width>
            <height>1080</height>
